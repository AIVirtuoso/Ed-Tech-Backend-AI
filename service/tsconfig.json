{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM"],
    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./config/*.json",
    "src/routes/temp/placeholder.ts",
    ".",
 ]
}
